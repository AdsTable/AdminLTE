{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true
  },
  "include": [
    "build/ts/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "plugins"
  ]
}
